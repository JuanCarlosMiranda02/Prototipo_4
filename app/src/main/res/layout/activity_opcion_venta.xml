<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Opcion_venta">

    <TextView
        android:id="@+id/Tv_ventas2"
        android:layout_width="156dp"
        android:layout_height="84dp"
        android:text="@string/btn_ventas"
        android:textAlignment="center"
        android:textSize="@dimen/Txt_tamanioENORME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_puntoVentas"
        android:layout_width="208dp"
        android:layout_height="58dp"
        android:onClick="IrVentas"
        android:layout_marginTop="52dp"
        android:text="@string/Tv_ventas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_venta" />

    <Button
        android:id="@+id/btn_lista_ventas"
        android:layout_width="208dp"
        android:layout_height="58dp"
        android:onClick="Detalles_venta"
        android:layout_marginTop="76dp"
        android:text="@string/btn_lista_ventas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_puntoVentas" />

    <ImageView
        android:id="@+id/img_ventas"
        android:layout_width="57dp"
        android:layout_height="53dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_puntoVentas"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_puntoVentas"
        app:srcCompat="@mipmap/ic_comprar" />

    <ImageView
        android:id="@+id/img_listaVentas"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_lista_ventas"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_puntoVentas"
        app:srcCompat="@mipmap/ic_lista_ventas" />

    <ImageView
        android:id="@+id/img_venta"
        android:layout_width="173dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_ventas2"
        app:srcCompat="@mipmap/ic_venta" />
</androidx.constraintlayout.widget.ConstraintLayout>