<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalles_venta">

    <TextView
        android:id="@+id/Tv_detallesV"
        android:layout_width="208dp"
        android:layout_height="59dp"
        android:text="Detalles de la venta"
        android:textAlignment="center"
        android:textSize="@dimen/Txt_tamanio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tv_idVenta"
        android:layout_width="128dp"
        android:layout_height="28dp"
        android:layout_marginTop="36dp"
        android:text="Id de la venta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_detallesV" />

    <TextView
        android:id="@+id/Tv_CampoId_venta"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_idVenta" />

    <TextView
        android:id="@+id/Tv_idProducto"
        android:layout_width="128dp"
        android:layout_height="28dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:text="Id del producto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_CampoId_venta" />

    <TextView
        android:id="@+id/Tv_CampoId_producto"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_idProducto" />

    <TextView
        android:id="@+id/Tv_CAntidadVendida"
        android:layout_width="128dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:text="Cantidad vendida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_CampoId_producto" />

    <TextView
        android:id="@+id/Tv_CampoCantidadVendida"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_CAntidadVendida" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="VolverVentas"
        android:layout_marginTop="32dp"
        android:text="Regresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_CampoTotal" />

    <ImageView
        android:id="@+id/img_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/Tv_CampoId_venta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_idVenta"
        app:srcCompat="@mipmap/ic_id" />

    <TextView
        android:id="@+id/Tv_Total_Venta"
        android:layout_width="128dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:text="Total de la venta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_CampoCantidadVendida" />

    <TextView
        android:id="@+id/Tv_CampoTotal"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:ems="10"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_Total_Venta" />

    <ImageView
        android:id="@+id/img_idProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/Tv_CampoId_producto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_idProducto"
        app:srcCompat="@mipmap/ic_lista_id_producto" />

    <ImageView
        android:id="@+id/img_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/Tv_CampoTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_Total_Venta"
        app:srcCompat="@mipmap/ic_venta_total" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/Tv_CampoCantidadVendida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_CAntidadVendida"
        app:srcCompat="@mipmap/ic_categoria" />

</androidx.constraintlayout.widget.ConstraintLayout>